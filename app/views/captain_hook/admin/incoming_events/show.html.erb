<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <nav aria-label="breadcrumb" class="mb-6">
    <ol class="flex items-center space-x-2 text-sm">
      <li>
        <%= link_to "Incoming Events", captain_hook.admin_incoming_events_path, class: "text-gray-600 hover:text-gray-900 hover:underline" %>
      </li>
      <li class="text-gray-400">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
      </li>
      <li class="font-medium text-gray-900">Event Details</li>
    </ol>
  </nav>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Incoming Event Details</h1>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2">
      <!-- Event Details -->
      <div class="bg-white shadow rounded-lg mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Event Information</h2>
        </div>
        <div class="px-6 py-4">
          <dl class="grid grid-cols-1 gap-4">
            <div class="grid grid-cols-3 gap-4">
              <dt class="text-sm font-medium text-gray-500">Provider</dt>
              <dd class="col-span-2 text-sm text-gray-900">
                <%= render FlatPack::Badge::Component.new(text: @event.provider, style: :info, size: :sm) %>
              </dd>
            </div>

            <div class="grid grid-cols-3 gap-4">
              <dt class="text-sm font-medium text-gray-500">Event Type</dt>
              <dd class="col-span-2 text-sm text-gray-900"><code class="px-2 py-1 bg-gray-100 rounded text-xs"><%= @event.event_type %></code></dd>
            </div>

            <div class="grid grid-cols-3 gap-4">
              <dt class="text-sm font-medium text-gray-500">External ID</dt>
              <dd class="col-span-2 text-sm text-gray-900"><%= @event.external_id %></dd>
            </div>

            <div class="grid grid-cols-3 gap-4">
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="col-span-2 text-sm text-gray-900">
                <%
                  status_variant = case @event.status&.to_s
                  when "pending" then :warning
                  when "processing" then :info
                  when "completed", "sent" then :success
                  when "failed" then :warning
                  else :default
                  end
                %>
                <%= render FlatPack::Badge::Component.new(text: @event.status&.titleize || 'N/A', style: status_variant, size: :sm) %>
              </dd>
            </div>

            <div class="grid grid-cols-3 gap-4">
              <dt class="text-sm font-medium text-gray-500">Received At</dt>
              <dd class="col-span-2 text-sm text-gray-900"><%= @event.created_at.strftime("%Y-%m-%d %H:%M:%S %Z") %></dd>
            </div>

            <div class="grid grid-cols-3 gap-4">
              <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
              <dd class="col-span-2 text-sm text-gray-900"><%= @event.updated_at.strftime("%Y-%m-%d %H:%M:%S %Z") %></dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Payload -->
      <div class="bg-white shadow rounded-lg mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Payload</h2>
        </div>
        <div class="px-6 py-4">
          <pre class="bg-gray-50 p-4 rounded overflow-x-auto text-xs"><code><%= JSON.pretty_generate(@event.payload) %></code></pre>
        </div>
      </div>
    </div>

    <div class="lg:col-span-1">
      <!-- Actions -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Event Actions</h2>
        </div>
        <div class="px-6 py-4">
          <% if @event.incoming_event_actions.any? %>
            <div class="space-y-4">
              <% @event.incoming_event_actions.order(priority: :asc, created_at: :asc).each do |action| %>
                <div class="border-b border-gray-200 pb-4 last:border-0 last:pb-0">
                  <div class="flex justify-between items-start mb-2">
                    <strong class="text-sm font-medium text-gray-900"><%= action.action_class %></strong>
                    <%
                      action_status_variant = case action.status&.to_s
                      when "pending" then :warning
                      when "processing" then :info
                      when "completed", "sent" then :success
                      when "failed" then :warning
                      else :default
                      end
                    %>
                    <%= render FlatPack::Badge::Component.new(text: action.status&.titleize || 'N/A', style: action_status_variant, size: :sm) %>
                  </div>
                  <div class="text-xs text-gray-500 mb-2">Priority: <%= action.priority %></div>
                  <% if action.error_message.present? %>
                    <div class="bg-red-50 border border-red-200 rounded p-2 mt-2">
                      <div class="text-xs font-semibold text-red-800">Error:</div>
                      <div class="text-xs text-red-700 mt-1"><%= action.error_message %></div>
                    </div>
                  <% end %>
                  <% if action.status_processed? || action.status_failed? %>
                    <div class="text-xs text-gray-500 mt-2">
                      <%= action.status.capitalize %> <%= time_ago_in_words(action.updated_at) %> ago
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm">No actions registered for this event.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
