<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <nav aria-label="breadcrumb" class="mb-6">
    <ol class="flex items-center space-x-2 text-sm">
      <li>
        <%= link_to "Incoming Events", captain_hook.admin_incoming_events_path, class: "text-gray-600 hover:text-gray-900 hover:underline" %>
      </li>
      <li class="text-gray-400">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
      </li>
      <li class="font-medium text-gray-900">Event Details</li>
    </ol>
  </nav>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Incoming Event Details</h1>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <!-- Event Details -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Event Information</h5>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">Provider</dt>
            <dd class="col-sm-9"><span class="badge bg-info"><%= @event.provider %></span></dd>

            <dt class="col-sm-3">Event Type</dt>
            <dd class="col-sm-9"><code><%= @event.event_type %></code></dd>

            <dt class="col-sm-3">External ID</dt>
            <dd class="col-sm-9"><%= @event.external_id %></dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
              <span class="badge bg-<%= status_color(@event.status) %>">
                <%= @event.status&.titleize || 'N/A' %>
              </span>
            </dd>

            <dt class="col-sm-3">Received At</dt>
            <dd class="col-sm-9"><%= @event.created_at.strftime("%Y-%m-%d %H:%M:%S %Z") %></dd>

            <dt class="col-sm-3">Last Updated</dt>
            <dd class="col-sm-9"><%= @event.updated_at.strftime("%Y-%m-%d %H:%M:%S %Z") %></dd>
          </dl>
        </div>
      </div>

      <!-- Payload -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Payload</h5>
        </div>
        <div class="card-body">
          <pre class="bg-light p-3 rounded"><code><%= JSON.pretty_generate(@event.payload) %></code></pre>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <!-- Actions -->
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Event Actions</h5>
        </div>
        <div class="card-body">
          <% if @event.incoming_event_actions.any? %>
            <% @event.incoming_event_actions.order(priority: :asc, created_at: :asc).each do |action| %>
              <div class="border-bottom pb-3 mb-3">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <strong><%= action.action_class %></strong>
                  <span class="badge bg-<%= status_color(action.status) %>">
                    <%= action.status&.titleize || 'N/A' %>
                  </span>
                </div>
                <small class="text-muted">Priority: <%= action.priority %></small>
                <% if action.error_message.present? %>
                  <div class="alert alert-danger mt-2 p-2 small">
                    <strong>Error:</strong><br>
                    <%= action.error_message %>
                  </div>
                <% end %>
                <% if action.status_processed? || action.status_failed? %>
                  <div class="text-muted small mt-1">
                    <%= action.status.capitalize %> <%= time_ago_in_words(action.updated_at) %> ago
                  </div>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">No actions registered for this event.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
