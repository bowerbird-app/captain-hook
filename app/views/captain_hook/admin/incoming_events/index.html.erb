<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Incoming Webhook Events</h1>

  <!-- Filters -->
  <div class="card mb-4">
    <div class="card-body">
      <%= form_with url: captain_hook.admin_incoming_events_path, method: :get, local: true do |f| %>
        <div class="row g-3">
          <div class="col-md-3">
            <%= f.label :provider, class: "form-label" %>
            <%= f.text_field :provider, value: params[:provider], class: "form-control", placeholder: "Provider" %>
          </div>
          <div class="col-md-3">
            <%= f.label :event_type, class: "form-label" %>
            <%= f.text_field :event_type, value: params[:event_type], class: "form-control", placeholder: "Event Type" %>
          </div>
          <div class="col-md-3">
            <%= f.label :status, class: "form-label" %>
            <%= f.select :status, options_for_select([
              ['All', ''],
              ['Pending', 'pending'],
              ['Processing', 'processing'],
              ['Completed', 'completed'],
              ['Failed', 'failed']
            ], params[:status]), {}, class: "form-control" %>
          </div>
          <div class="col-md-3 d-flex align-items-end">
            <%= f.submit "Filter", class: "btn btn-primary me-2" %>
            <%= link_to "Clear", captain_hook.admin_incoming_events_path, class: "btn btn-secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Events Table -->
  <div class="card">
    <div class="card-body">
      <% if @events.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Provider</th>
                <th>Event Type</th>
                <th>External ID</th>
                <th>Status</th>
                <th>Actions</th>
                <th>Received At</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @events.each do |event| %>
                <tr>
                  <td><span class="badge bg-info"><%= event.provider %></span></td>
                  <td><code><%= event.event_type %></code></td>
                  <td><small><%= event.external_id %></small></td>
                  <td>
                    <span class="badge bg-<%= status_color(event.status) %>">
                      <%= event.status&.titleize || 'N/A' %>
                    </span>
                  </td>
                  <td><%= event.incoming_event_actions.count %></td>
                  <td><%= time_ago_in_words(event.created_at) %> ago</td>
                  <td>
                    <%= link_to "View", captain_hook.admin_incoming_event_path(event), class: "btn btn-sm btn-outline-primary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="mt-3">
          <%= paginate @events %>
        </div>
      <% else %>
        <div class="alert alert-info">
          No incoming events found. Events will appear here once webhooks are received.
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :head do %>
  <style>
    .table code {
      font-size: 0.9em;
    }
  </style>
<% end %>
