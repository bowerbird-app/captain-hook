<div class="container py-4">
  <h1 class="mb-4">Outgoing Webhook Events</h1>

  <!-- Filters -->
  <div class="card mb-4">
    <div class="card-body">
      <%= form_with url: captain_hook.admin_outgoing_events_path, method: :get, local: true do |f| %>
        <div class="row g-3">
          <div class="col-md-4">
            <%= f.label :endpoint, class: "form-label" %>
            <%= f.text_field :endpoint, value: params[:endpoint], class: "form-control", placeholder: "Endpoint" %>
          </div>
          <div class="col-md-4">
            <%= f.label :status, class: "form-label" %>
            <%= f.select :status, options_for_select([
              ['All', ''],
              ['Pending', 'pending'],
              ['Sent', 'sent'],
              ['Failed', 'failed']
            ], params[:status]), {}, class: "form-control" %>
          </div>
          <div class="col-md-4 d-flex align-items-end">
            <%= f.submit "Filter", class: "btn btn-primary me-2" %>
            <%= link_to "Clear", captain_hook.admin_outgoing_events_path, class: "btn btn-secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Events Table -->
  <div class="card">
    <div class="card-body">
      <% if @events.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Endpoint</th>
                <th>URL</th>
                <th>Status</th>
                <th>Response Code</th>
                <th>Attempts</th>
                <th>Created At</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @events.each do |event| %>
                <tr>
                  <td><span class="badge bg-primary"><%= event.provider %></span></td>
                  <td><small><%= truncate(event.target_url, length: 50) %></small></td>
                  <td>
                    <span class="badge bg-<%= status_color(event.status) %>">
                      <%= event.status&.titleize || 'N/A' %>
                    </span>
                  </td>
                  <td>
                    <% if event.response_code %>
                      <span class="badge bg-<%= response_code_color(event.response_code) %>">
                        <%= event.response_code %>
                      </span>
                    <% else %>
                      <span class="text-muted">â€”</span>
                    <% end %>
                  </td>
                  <td><%= event.attempt_count || 0 %></td>
                  <td><%= time_ago_in_words(event.created_at) %> ago</td>
                  <td>
                    <%= link_to "View", captain_hook.admin_outgoing_event_path(event), class: "btn btn-sm btn-outline-primary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="mt-3">
          <%= paginate @events %>
        </div>
      <% else %>
        <div class="alert alert-info">
          No outgoing events found. Events will appear here once webhooks are sent.
        </div>
      <% end %>
    </div>
  </div>
</div>
