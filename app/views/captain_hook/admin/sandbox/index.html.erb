<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">ðŸ§ª Webhook Sandbox</h1>
    <p class="text-gray-600">Test webhook payloads in dry-run mode â€” no database changes, no action execution.</p>
  </div>

  <% if @providers.empty? %>
    <%= render FlatPack::Card::Component.new(style: :elevated, padding: :lg, class: "text-center") do |card| %>
      <% card.body do %>
      <p class="text-gray-600 mb-4">No active providers configured.</p>
      <%= render FlatPack::Button::Component.new(
        text: "Create a Provider",
        url: new_admin_provider_path,
        style: :primary
      ) %>
      <% end %>
    <% end %>
  <% else %>
    <%= render FlatPack::Card::Component.new(style: :elevated) do |card| %>
      <% card.body do %>
        <form id="sandbox-form">
          <!-- Provider Selection -->
          <div class="mb-6">
            <%= render FlatPack::Select::Component.new(
              name: "provider_id",
              label: "Provider",
              options: @providers.map { |p|
                provider_config = CaptainHook.configuration.provider(p.name)
                [provider_config&.display_name || p.name, p.id.to_s]
              },
              placeholder: "Select a provider...",
              id: "provider-select"
            ) %>
          </div>

          <!-- Payload Editor -->
          <div class="mb-6">
            <%= render FlatPack::TextArea::Component.new(
              name: "payload",
              label: "JSON Payload",
              placeholder: '{"type": "test", "data": {...}}',
              rows: 12,
              value: "{\"type\": \"test\",\"id\": \"test-#{SecureRandom.hex(8)}\",\"timestamp\": #{Time.now.to_i},\"data\": {\"message\": \"Hello from sandbox!\",\"user_id\": 12345}}",
              id: "payload-input",
              class: "font-mono text-sm"
            ) %>
            <p class="text-xs text-gray-500 mt-2">ðŸ’¡ Change "type" to match your action event types</p>
          </div>

          <!-- Test Button -->
          <div>
            <%= render FlatPack::Button::Component.new(
              text: "Test Payload (Dry Run)",
              style: :primary,
              size: :lg,
              type: "button",
              id: "test-webhook-btn",
              class: "w-full"
            ) %>
          </div>
        </form>

        <!-- Results Section -->
        <div id="result-container" class="mt-6 hidden">
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Result</h3>
            <pre id="result-content" class="bg-gray-900 text-gray-100 p-4 rounded text-xs overflow-auto" style="max-height: 400px;"></pre>
          </div>
        </div>
      <% end %>
    <% end %>

    <!-- Info Alert -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg mt-6">
      <div class="px-6 py-4">
        <h3 class="text-md font-semibold text-blue-900 mb-4">About Dry Run Mode</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <div class="font-semibold text-blue-900 mb-2">This will:</div>
            <ul class="list-disc list-inside space-y-1 text-blue-800 text-sm">
              <li>Validate JSON format</li>
              <li>Show matching actions</li>
              <li>Extract event metadata</li>
            </ul>
          </div>
          <div>
            <div class="font-semibold text-blue-900 mb-2">This will NOT:</div>
            <ul class="list-disc list-inside space-y-1 text-blue-800 text-sm">
              <li>Create database records</li>
              <li>Execute action logic</li>
              <li>Enqueue background jobs</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
(function() {
  const providerSelect = document.getElementById('provider-select');
  const payloadInput = document.getElementById('payload-input');
  const testBtn = document.getElementById('test-webhook-btn');
  const resultContainer = document.getElementById('result-container');
  const resultContent = document.getElementById('result-content');

  testBtn.addEventListener('click', async function() {
    const providerId = providerSelect.value;
    const payload = payloadInput.value;

    if (!providerId) {
      alert('Please select a provider');
      return;
    }

    const originalText = testBtn.textContent;
    testBtn.disabled = true;
    testBtn.textContent = 'Testing...';
    resultContainer.classList.add('hidden');

    try {
      const response = await fetch('/captain_hook/admin/sandbox/test', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        },
        body: JSON.stringify({
          provider_id: providerId,
          payload: payload
        })
      });

      const data = await response.json();
      resultContainer.classList.remove('hidden');
      resultContent.textContent = JSON.stringify(data, null, 2);
    } catch (error) {
      resultContainer.classList.remove('hidden');
      resultContent.textContent = `Error: ${error.message}`;
    } finally {
      testBtn.disabled = false;
      testBtn.textContent = originalText;
    }
  });
})();
</script>
