<div class="container py-4">
  <div class="mb-4">
    <h1>Webhook Providers</h1>
  </div>

  <div class="card">
    <div class="card-body">
      <% if @providers.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Display Name</th>
                <th>Status</th>
                <th>Security</th>
                <th>Actions</th>
                <th>Operations</th>
              </tr>
            </thead>
            <tbody>
              <% @providers.each do |provider| %>
                <tr>
                  <td>
                    <code><%= provider.name %></code>
                  </td>
                  <td><%= provider.display_name || provider.name.titleize %></td>
                  <td>
                    <% if provider.active? %>
                      <span class="badge bg-success">Active</span>
                    <% else %>
                      <span class="badge bg-secondary">Inactive</span>
                    <% end %>
                  </td>
                  <td>
                    <%
                      config_data = @provider_configs[provider.name]
                      resolved_secret = nil
                      if config_data
                        config = CaptainHook::ProviderConfig.new(config_data)
                        resolved_secret = config.signing_secret
                      end
                    %>
                    <% if resolved_secret.present? %>
                      <span class="badge bg-success">Configured</span>
                    <% else %>
                      <span class="badge bg-warning">No Secret</span>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to admin_provider_actions_path(provider) do %>
                      <%= provider.actions.count %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to "View", [:admin, provider], class: "btn btn-sm btn-outline-primary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="mt-3">
          <%= paginate @providers %>
        </div>
      <% else %>
        <div class="alert alert-info">
          <p class="mb-2"><strong>No providers configured yet.</strong></p>
          <p class="mb-0">Providers are automatically discovered from YAML files in the <code>captain_hook/&lt;provider&gt;/&lt;provider&gt;.yml</code> directory on application boot. Create a provider YAML file and restart the server to add providers.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
