<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Webhook Providers</h1>
    <%= link_to "Add Provider", new_admin_provider_path, class: "btn btn-primary" %>
  </div>

  <div class="card">
    <div class="card-body">
      <% if @providers.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Display Name</th>
                <th>Adapter</th>
                <th>Status</th>
                <th>Events</th>
                <th>Created</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @providers.each do |provider| %>
                <tr>
                  <td>
                    <code><%= provider.name %></code>
                  </td>
                  <td><%= provider.display_name || provider.name.titleize %></td>
                  <td><small><%= provider.adapter_class.split("::").last %></small></td>
                  <td>
                    <% if provider.active? %>
                      <span class="badge bg-success">Active</span>
                    <% else %>
                      <span class="badge bg-secondary">Inactive</span>
                    <% end %>
                  </td>
                  <td><%= provider.incoming_events.count %></td>
                  <td><%= time_ago_in_words(provider.created_at) %> ago</td>
                  <td>
                    <%= link_to "View", [:admin, provider], class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Edit", edit_admin_provider_path(provider), class: "btn btn-sm btn-outline-secondary" %>
                    <%= link_to "Handlers", admin_provider_handlers_path(provider), class: "btn btn-sm btn-outline-info" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="mt-3">
          <%= paginate @providers %>
        </div>
      <% else %>
        <div class="alert alert-info">
          <p class="mb-2"><strong>No providers configured yet.</strong></p>
          <p class="mb-0">Providers represent webhook sources like Stripe, OpenAI, GitHub, etc. <%= link_to "Add your first provider", new_admin_provider_path %> to start receiving webhooks.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Quick Info -->
  <div class="card mt-4">
    <div class="card-body">
      <h5 class="card-title">About Providers</h5>
      <p class="card-text">
        Providers represent external services that send webhooks to your application.
        Each provider has a unique webhook URL that you can share with the service.
      </p>
      <ul>
        <li><strong>Name:</strong> Unique identifier for the provider (lowercase, underscores only)</li>
        <li><strong>Adapter:</strong> Handles signature verification for this provider</li>
        <li><strong>Token:</strong> Automatically generated secure token for the webhook URL</li>
        <li><strong>Handlers:</strong> Ruby classes that process events from this provider</li>
      </ul>
    </div>
  </div>
</div>
