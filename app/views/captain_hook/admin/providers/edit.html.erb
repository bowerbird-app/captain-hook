<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <nav aria-label="breadcrumb" class="mb-6">
    <ol class="flex items-center space-x-2 text-sm">
      <li>
        <%= link_to "Providers", admin_providers_path, class: "text-gray-600 hover:text-gray-900 hover:underline" %>
      </li>
      <li class="text-gray-400">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
      </li>
      <li>
        <%= link_to @registry_config&.display_name || @provider.name.titleize, [:admin, @provider], class: "text-gray-600 hover:text-gray-900 hover:underline" %>
      </li>
      <li class="text-gray-400">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
      </li>
      <li class="font-medium text-gray-900">Edit</li>
    </ol>
  </nav>

  <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Provider</h1>

  <%= form_with model: [:admin, @provider], local: true, class: "needs-validation" do |f| %>
    <% if @provider.errors.any? %>
      <div class="alert alert-danger">
        <h5><%= pluralize(@provider.errors.count, "error") %> prohibited this provider from being saved:</h5>
        <ul class="mb-0">
          <% @provider.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Basic Information</h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", disabled: true %>
          <small class="form-text text-muted">Provider name cannot be changed after creation</small>
        </div>

        <% if @registry_config&.display_name.present? %>
          <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" value="<%= @registry_config.display_name %>" disabled>
            <small class="form-text text-muted">Display name is configured in the provider's YAML file</small>
          </div>
        <% end %>

        <% if @registry_config&.description.present? %>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" rows="3" disabled><%= @registry_config.description %></textarea>
            <small class="form-text text-muted">Description is configured in the provider's YAML file</small>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :active, class: "form-label" %>
          <div class="form-check">
            <%= f.check_box :active, class: "form-check-input" %>
            <%= f.label :active, "Provider is active", class: "form-check-label" %>
          </div>
          <small class="form-text text-muted">Inactive providers won't accept webhooks</small>
        </div>
      </div>
    </div>

    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Authentication</h5>
      </div>
      <div class="card-body">
        <div class="alert alert-info">
          <strong>ℹ️ Note:</strong> The signing secret is configured in the provider's YAML file.
          <% if @registry_config&.raw_signing_secret.present? %>
            Current value: <code><%= @registry_config.raw_signing_secret.start_with?('ENV[') ? @registry_config.raw_signing_secret : @registry_config.raw_signing_secret.truncate(20) %></code>
          <% end %>
        </div>

        <div class="alert alert-warning">
          <strong>⚠️ Security Note:</strong> The webhook token (<code><%= @provider.token.truncate(20) %></code>) cannot be changed.
          If you need a new token, you must create a new provider.
        </div>
      </div>
    </div>

    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Security Settings</h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <%= f.label :timestamp_tolerance_seconds, class: "form-label" %>
          <%= f.number_field :timestamp_tolerance_seconds, class: "form-control" %>
          <small class="form-text text-muted">Timestamp tolerance in seconds</small>
        </div>

        <div class="mb-3">
          <%= f.label :max_payload_size_bytes, class: "form-label" %>
          <%= f.number_field :max_payload_size_bytes, class: "form-control" %>
          <small class="form-text text-muted">Maximum payload size in bytes</small>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :rate_limit_requests, "Rate Limit (requests)", class: "form-label" %>
            <%= f.number_field :rate_limit_requests, class: "form-control" %>
          </div>
          <div class="col-md-6 mb-3">
            <%= f.label :rate_limit_period, "Rate Limit (period in seconds)", class: "form-label" %>
            <%= f.number_field :rate_limit_period, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

    <div class="d-flex gap-2">
      <%= f.submit "Update Provider", class: "btn btn-primary" %>
      <%= link_to "Cancel", [:admin, @provider], class: "btn btn-secondary" %>
    </div>
  <% end %>

  <div class="mt-4 pt-4 border-top">
    <%= button_to "Delete Provider", [:admin, @provider], 
        method: :delete, 
        class: "btn btn-danger",
        form: { data: { turbo_confirm: "Are you sure? This will permanently delete this provider and cannot be undone." } } %>
  </div>
</div>
