<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <nav aria-label="breadcrumb" class="mb-6">
    <ol class="flex items-center space-x-2 text-sm">
      <li>
        <%= link_to "Providers", admin_providers_path, class: "text-gray-600 hover:text-gray-900 hover:underline" %>
      </li>
      <li class="text-gray-400">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
      </li>
      <li>
        <%= link_to @registry_config&.display_name || @provider.name.titleize, [:admin, @provider], class: "text-gray-600 hover:text-gray-900 hover:underline" %>
      </li>
      <li class="text-gray-400">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
      </li>
      <li class="font-medium text-gray-900">Edit</li>
    </ol>
  </nav>

  <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Provider</h1>

  <%= form_with model: [:admin, @provider], local: true do |f| %>
    <% if @provider.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg px-6 py-4 mb-6">
        <h5 class="font-semibold text-red-900 mb-2"><%= pluralize(@provider.errors.count, "error") %> prohibited this provider from being saved:</h5>
        <ul class="list-disc list-inside text-red-800 space-y-1">
          <% @provider.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h5 class="font-semibold text-gray-900">Basic Information</h5>
      </div>
      <div class="px-6 py-6 space-y-6">
        <div>
          <%= render FlatPack::TextInput::Component.new(
            name: "provider[name]",
            label: "Name",
            value: @provider.name,
            disabled: true
          ) %>
          <p class="text-xs text-gray-500 mt-2">Provider name cannot be changed after creation</p>
        </div>

        <% if @registry_config&.display_name.present? %>
          <div>
            <%= render FlatPack::TextInput::Component.new(
              name: "display_name",
              label: "Display Name",
              value: @registry_config.display_name,
              disabled: true
            ) %>
            <p class="text-xs text-gray-500 mt-2">Display name is configured in the provider's YAML file</p>
          </div>
        <% end %>

        <% if @registry_config&.description.present? %>
          <div>
            <%= render FlatPack::TextArea::Component.new(
              name: "description",
              label: "Description",
              value: @registry_config.description,
              rows: 3,
              disabled: true
            ) %>
            <p class="text-xs text-gray-500 mt-2">Description is configured in the provider's YAML file</p>
          </div>
        <% end %>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Active Status</label>
          <div class="flex items-center">
            <%= f.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <label class="ml-2 text-sm text-gray-700">Provider is active</label>
          </div>
          <p class="text-xs text-gray-500 mt-2">Inactive providers won't accept webhooks</p>
        </div>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h5 class="font-semibold text-gray-900">Authentication</h5>
      </div>
      <div class="px-6 py-6 space-y-4">
        <div class="bg-blue-50 border border-blue-200 rounded-lg px-4 py-3">
          <p class="text-sm text-blue-900">
            <strong>ℹ️ Note:</strong> The signing secret is configured in the provider's YAML file.
            <% if @registry_config&.raw_signing_secret.present? %>
              <br>Current value: <code class="bg-blue-100 px-2 py-1 rounded"><%= @registry_config.raw_signing_secret.start_with?('ENV[') ? @registry_config.raw_signing_secret : @registry_config.raw_signing_secret.truncate(20) %></code>
            <% end %>
          </p>
        </div>

        <div class="bg-yellow-50 border border-yellow-200 rounded-lg px-4 py-3">
          <p class="text-sm text-yellow-900">
            <strong>⚠️ Security Note:</strong> The webhook token (<code class="bg-yellow-100 px-2 py-1 rounded"><%= @provider.token.truncate(20) %></code>) cannot be changed.
            If you need a new token, you must create a new provider.
          </p>
        </div>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h5 class="font-semibold text-gray-900">Security Settings</h5>
      </div>
      <div class="px-6 py-6 space-y-6">
        <div>
          <%= render FlatPack::NumberInput::Component.new(
            name: "provider[timestamp_tolerance_seconds]",
            label: "Timestamp Tolerance Seconds",
            value: @provider.timestamp_tolerance_seconds
          ) %>
          <p class="text-xs text-gray-500 mt-2">Timestamp tolerance in seconds</p>
        </div>

        <div>
          <%= render FlatPack::NumberInput::Component.new(
            name: "provider[max_payload_size_bytes]",
            label: "Max Payload Size Bytes",
            value: @provider.max_payload_size_bytes
          ) %>
          <p class="text-xs text-gray-500 mt-2">Maximum payload size in bytes</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= render FlatPack::NumberInput::Component.new(
              name: "provider[rate_limit_requests]",
              label: "Rate Limit (requests)",
              value: @provider.rate_limit_requests
            ) %>
          </div>
          <div>
            <%= render FlatPack::NumberInput::Component.new(
              name: "provider[rate_limit_period]",
              label: "Rate Limit (period in seconds)",
              value: @provider.rate_limit_period
            ) %>
          </div>
        </div>
      </div>
    </div>

    <div class="flex gap-2">
      <%= f.submit "Update Provider", class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors cursor-pointer" %>
      <%= render FlatPack::Button::Component.new(
        text: "Cancel",
        url: [:admin, @provider],
        style: :secondary
      ) %>
    </div>
  <% end %>

  <div class="mt-6 pt-6 border-t border-gray-200">
    <%= button_to "Delete Provider", [:admin, @provider], 
        method: :delete, 
        class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-md transition-colors cursor-pointer",
        form: { data: { turbo_confirm: "Are you sure? This will permanently delete this provider and cannot be undone." } } %>
  </div>
</div>
