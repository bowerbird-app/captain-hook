<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <nav aria-label="breadcrumb" class="mb-6">
    <ol class="flex items-center space-x-2 text-sm">
      <li>
        <%= link_to "Providers", admin_providers_path, class: "text-gray-600 hover:text-gray-900 hover:underline" %>
      </li>
      <li class="text-gray-400">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
      </li>
      <li class="font-medium text-gray-900">New Provider</li>
    </ol>
  </nav>

  <h1 class="text-3xl font-bold text-gray-900 mb-6">Add New Provider</h1>

  <%= form_with model: [:admin, @provider], local: true, class: "needs-validation" do |f| %>
    <% if @provider.errors.any? %>
      <div class="alert alert-danger">
        <h5><%= pluralize(@provider.errors.count, "error") %> prohibited this provider from being saved:</h5>
        <ul class="mb-0">
          <% @provider.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Basic Information</h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "stripe", required: true %>
          <small class="form-text text-muted">Unique identifier (lowercase, underscores only). Example: stripe, openai, github. Display name and description should be configured in the provider's YAML file.</small>
        </div>

        <div class="mb-3">
          <%= f.label :active, class: "form-label" %>
          <div class="form-check">
            <%= f.check_box :active, class: "form-check-input", checked: true %>
            <%= f.label :active, "Provider is active", class: "form-check-label" %>
          </div>
          <small class="form-text text-muted">Inactive providers won't accept webhooks</small>
        </div>
      </div>
    </div>

    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Authentication</h5>
      </div>
      <div class="card-body">
        <div class="alert alert-info">
          <strong>ℹ️ Note:</strong> A secure token will be automatically generated when you save this provider.
          You'll use this token in the webhook URL. The signing secret should be configured in the provider's YAML file.
        </div>
      </div>
    </div>

    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Rate Limiting (optional)</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :rate_limit_requests, "Rate Limit (requests)", class: "form-label" %>
            <%= f.number_field :rate_limit_requests, class: "form-control", value: 100, placeholder: "100" %>
          </div>
          <div class="col-md-6 mb-3">
            <%= f.label :rate_limit_period, "Rate Limit (period in seconds)", class: "form-label" %>
            <%= f.number_field :rate_limit_period, class: "form-control", value: 60, placeholder: "60" %>
          </div>
        </div>
        <small class="form-text text-muted">Rate limit: Maximum number of requests allowed within the specified period. Default: 100 requests per 60 seconds</small>
      </div>
    </div>

    <div class="d-flex gap-2">
      <%= f.submit "Create Provider", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_providers_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
