# Stripe webhook provider configuration
# This file is automatically scanned by CaptainHook on "Scan for Providers"
# Place this file in: captain_hook/providers/stripe/stripe.yml
#
# CaptainHook includes a built-in Stripe adapter, so you don't need to create stripe.rb
# Just set adapter_class to use the built-in adapter

name: stripe
display_name: Stripe
description: Stripe payment and subscription webhooks
adapter_class: CaptainHook::Adapters::Stripe
active: true

# Security settings
signing_secret: ENV[STRIPE_WEBHOOK_SECRET]
timestamp_tolerance_seconds: 300

# Rate limiting (optional)
rate_limit_requests: 100
rate_limit_period: 60

# Payload size limit (optional, in bytes)
max_payload_size_bytes: 1048576
